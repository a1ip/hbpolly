@import "css/normalize.css"

body
    font-family 'Open Sans Condensed','Arial Narrow', serif
    font-weight 400
    font-size 15px
    color #333
    font-smoothing antialiased
    overflow-y scroll
    overflow-x hidden
    min-height 100%
    background url(../images/canvas.jpg)

a
    color #555
    text-decoration none

.container
    width 100%
    position relative
    & > header
        margin 10px
        padding 20px 10px 10px 10px
        position relative
        display block
        text-shadow 1px 1px 1px rgba(0,0,0,0.2)
        text-align center

.clr
    clear both
    padding 0
    height 0
    margin 0

.main
    width 90%
    margin 0 auto
    position relative

.support-note
    span
        color #ac375d
        font-size 16px
        display none
        font-weight bold
        text-align center
        padding 5px 0

.no-cssanimations .support-note span.no-cssanimations,
.no-csstransforms .support-note span.no-csstransforms,
.no-csstransforms3d .support-note span.no-csstransforms3d,
.no-csstransitions .support-note span.no-csstransitions
    display block

body
    background url(../images/canvas.jpg)

.cs-text
    text-align center
    margin-top 70px
    span[class^="word"]
        display inline-block
        margin 0 15px
    span[class^="char"]
        width 90px
        height 100px
        display inline-block
        background #e4d095
        color #2a1f1b
        border-radius 4px
        font-size 60px
        font-weight 400
        line-height 100px
        margin 10px 3px
        text-align center
        cursor default
        font-family "Ubuntu", Arial, sans-serif
        text-shadow 1px 1px 1px rgba(255, 255, 255, 0.9), 
        0 -1px 1px rgba(255,255,255,0.2)
        text-transform uppercase
        box-shadow 1px 7px 15px rgba(0,0,0,0.8),
        inset 3px 0 2px rgba(255,255,255,0.4),
        inset 0 3px 0px rgba(255,255,255,0.5),
        inset -2px -3px 0px rgba(143,128,82,0.6)
    span[class^="char"]:nth-child(odd)
        -webkit-transform rotate(2deg)
        -moz-transform rotate(2deg)
        -o-transform rotate(2deg)
        -ms-transform rotate(2deg)
        transform rotate(2deg)
    span[class^="char"]:nth-child(3n)
        -webkit-transform rotate(-3deg)
        -moz-transform rotate(-3deg)
        -o-transform rotate(-3deg)
        -ms-transform rotate(-3deg)
        transform rotate(-3deg)

.cs-text > span:nth-child(4) span,
h3.cs-text span[class^="char"]
    color #a62a19

h3
    &.cs-text
        span[class^="char"]
            font-size 40px
            width 50px
            height 60px
            line-height 60px

